<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.SalaryMapper">
    <update id="editEmpSalary" parameterType="Integer">
        update employee_salary set employee_salary.sid = #{sid} where employee_salary.eid = #{eid}
    </update>
    <select id="getAllSalaries" resultType="com.example.model.Salary">
        select * from salary
    </select>
</mapper>