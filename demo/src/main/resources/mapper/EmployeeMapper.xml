<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.EmployeeMapper">
    <resultMap id="BaseResultMap" type="com.example.model.Employee">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="gender" property="gender"/>
        <result column="birthday" property="birthday"/>
        <result column="idCard" property="idCard"/>
        <result column="wedlock" property="wedlock"/>
        <result column="nativePlace" property="nativePlace"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="address" property="address"/>
        <association property="nation"  javaType="com.example.model.Nation">
            <id property="id" column="nid"/>
            <result property="name" column="nname"/>
        </association>
        <association property="politicsStatus" javaType="com.example.model.PoliticsStatus">
            <id property="id" column="psid"/>
            <result property="name" column="psname"/>
        </association>
    </resultMap>

    <select id="getAllNations" resultType="com.example.model.Nation">
        select * from nations;
    </select>

    <select id="getAllPolitics" resultType="com.example.model.PoliticsStatus">
        select * from politicsstatus;
    </select>

    <select id="getEmployeeByPage" resultMap="BaseResultMap">
        select e.*,n.`id` as nid,n.`name` as nname,ps.`id` as psid,ps.`name` as psname
        from employee e,nations n,politicsstatus ps
        where e.`nationId`=n.`id` and e.`politicId`=ps.`id` and e.`name`
        like concat('%',#{keywords},'%')
        <if test="start!=null and size!=null">
            order by e.id limit #{start},#{size}
        </if>
    </select>

    <select id="getCountByKeywords" resultType="Integer">
        SELECT count(*) FROM employee e WHERE e.name LIKE concat('%',#{keywords},'%')
    </select>
</mapper>